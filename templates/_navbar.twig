{%
  set navbar =[
    {'page': 'Home', 'url': base},
    {'page': 'Games', 'url': base~'games'},
  ]
%}

<!--Navbar start-->
<nav x-data="{ open: false }" class="flex flex-row h-16 w-full items-center justify-between fixed z-10" style="background-color: #111111;">
  <a class="text-white text-lg font-bold mx-4 py-2 transform hover:scale-125 transition duration-500" href="{{ base }}">infoGim</a>
  <button @click="open = !open" class="block md:hidden text-white px-4 focus:outline-none">
    <i :class="{ 'las la-bars transform rotate-0 duration-500': open === false, 'las la-times transform rotate-180 scale-75 duration-500': open === true }" style="font-size: 32px;"></i>
  </button>
  <ul :class="{ 'block': open, 'hidden': !open }" @click.away="open = false" class="absolute top-16 w-full md:static md:justify-end md:flex md:flex-row" style="background-color: #111111;">
  {% for item in navbar %}
    <a  class="font-semibold text-white text-opacity-50 hover:text-opacity-100 transition duration-500" href="{{ item.url }}"><li @click="open: false" class="p-4">{{ item.page }}</li></a>
  {% endfor %}
  </ul>
</nav>
<!--Navbar end-->