<div class="flex flex-col w-full h-full md:h-screen" style="{{ blockContent.bgColor }}">
  <div class="py-24 m-auto">
    <div class="grid md:grid-cols-2 w-11/12 h-full gap-x-12 gap-y-4 m-auto">
      
      <div class="box-content w-11/12 text-center md:text-left m-auto">
        <h1 class="text-yellow-500 text-2xl md:text-4xl font-bold pb-2 border-b-2 border-yellow-500">{{ blockContent.header }}</h1>
        <p class="text-white text-base md:text-lg my-4">{{ blockContent.body }}</p>
        <button class="py-3 px-8 text-base font-semibold text-black bg-yellow-500 rounded-full border-2 border-yellow-500 transform hover:bg-transparent hover:text-yellow-500 mt-4 duration-500"><a class="" href="{{ blockContent.button }}">Lihat semua game</a></button>
      </div>

      <div class="box-content w-11/12 m-auto">
        <div class="flex h-96 w-full bg-cover bg-center bg-no-repeat justify-center m-auto" style="background-image: url({{ blockContent.image[0].url }});">
          <h1 class="flex text-center text-2xl md:text-4xl tracking-wide md:tracking-widest font-bold text-white items-center m-auto">infoGim?</h1>
        </div>
      </div>

    </div>
  </div>
</div>