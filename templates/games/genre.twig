{% extends 'layout/_base_layout.twig' %}

{% set subTitle = 'Genre' %}

{% set catQuery = craft.categories() .group('genre') %}

{% set categories = catQuery.all() %}

{% block content %}
  <div class="py-24">
    <div class="flex flex-col h-full w-11/12 rounded-2xl m-auto p-12" style="background-color: #212121;">
      <h1 class="text-white font-bold text-2xl text-center">Menampilkan semua genre game :</h1>
      <div class="grid md:grid-cols-2 gap-x-8 gap-y-4 my-12">
        {% for item in categories %}
          <a class="h-12 w-11/12 p-2 text-center border-2 font-normal font-bold rounded-md text-white text-base border-white hover:bg-white hover:text-black m-auto" href="{{ item.url }}">{{ item }}</a>
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}